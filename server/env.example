# Email configuration - Required for emergency email notifications
USER_EMAIL=your_email@gmail.com
APP_PASSWORD=your_app_password_from_google

# Twilio configuration - Required for WhatsApp notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token  
TWILIO_WHATSAPP_NUMBER=+14155238886  # This is the Twilio sandbox WhatsApp number

# MongoDB configuration
MONGODB_URI=mongodb://localhost:27017/medicine_app

# JWT configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=86400  # 24 hours in seconds

# App configuration
DEBUG=True
PORT=5000 